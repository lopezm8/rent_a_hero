<!-- index.hbs -->
<h1>Missions</h1>

{{!-- Create a table --}}
<table id="missions-table">

    {{!-- Header section --}}
    <thead>

        {{!-- For just the first row, we print each key of the row object as a header cell so we
        know what each column means when the page renders --}}
        <tr>
            <th>ID</th>
            <th>Mission Type</th>
            <th>Description</th>
            <th>Base Cost</th>
            <th>Delete</th>
        </tr>
    </thead>

    {{!-- Body section --}}
    <tbody>

        {{!-- For each row, print the id, fname, lname, homeworld and age, in order --}}
        {{#each data}}
        <tr>
            <td>{{this.mission_id}}</td>
            <td>{{this.mission_type}}</td>
            <td>{{this.mission_description}}</td>
            <td>{{this.mission_base_cost}}</td>
            <td><button onclick="deleteMission({{this.mission_id}})">Delete</button></td>
        </tr>
        {{/each}}
    </tbody>
</table>
<script type="application/javascript" src="./js/delete_mission.js"></script>

