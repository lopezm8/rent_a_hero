{{!-- Form to add a record to the table --}}
<h2>Add a Mission</h2>
<p>To add a new mission, please enter the mission information below and click 'Submit'!</p>
<form id="add-mission-form-ajax">
    <label for="mission_type_ajax">Mission Type: </label>
    <input type="text" name="mission_type_ajax" id="mission_type_ajax">

    <label for="mission_description_ajax">Mission Description: </label>
    <input type="text" name="mission_description_ajax" id="mission_description_ajax">

    <label for="mission_base_cost_ajax">Mission Base Cost: </label>
    <input type="number" name="mission_base_cost_ajax" id="mission_base_cost_ajax">

    <input type="submit">
</form>

{{!-- Embed our javascript to handle the DOM manipulation and AJAX request --}}
<script type="application/javascript" src="./js/add_mission.js"></script>

<h2>Update a Mission</h2>
<p>To update a specific mission, fill in the form below</p>
<form id="update-mission-form-ajax">

    <label for="update_mission_id_ajax">Mission ID: </label>
    <select name="update_mission_id_ajax" id="update_mission_id_ajax">
        <option value="test">Select a mission ID:</option>
        {{#each data}}
        <option value="{{this.mission_id}}">{{this.mission_id}}</option>
        {{/each}}
    </select>

    <label for="update_mission_type_ajax">Mission Type: </label>
    <input type="text" name="update_mission_type_ajax" id="update_mission_type_ajax">

    <label for="update_mission_description_ajax">Mission Description: </label>
    <input type="text" name="update_mission_description_ajax" id="update_mission_description_ajax">

    <label for="update_mission_base_cost_ajax">Mission Base Cost: </label>
    <input type="number" name="update_mission_base_cost_ajax" id="update_mission_base_cost_ajax">
    <input type="submit">

</form>

<script type="application/javascript" src="./js/update_mission.js"></script>
