    <input type="text" name="update_customer_phone_number" id="update_customer_phone_number">

    <label for="update_customer_email">Email: </label>
    <input type="text" name="update_customer_email" id="update_customer_email">

    <label for="update_customer_state">State: </label>
    <select name="update_customer_state" id="update_customer_state">
        <option value="0">Select a State</option>
        {{#each states}}
        <option value="{{this.state_id}}">{{this.state_name}}</option>
