{{!-- Form to add a record to the table --}}
<h2>Adding a Customer</h2>
<p>To add a new customer, please enter their information below and click 'Submit'!</p>
<form id="add-customer-form-ajax">
    <label for="customer_name_ajax">Customer Name: </label>
    <input type="text" name="customer_name_ajax" id="customer_name_ajax">

    <label for="customer_phone_number_ajax">Phone Number: </label>
    <input type="text" name="customer_phone_number_ajax" id="customer_phone_number_ajax">

    <label for="customer_email_ajax">Email: </label>
    <input type="text" name="customer_email_ajax" id="customer_email_ajax">

    <label for="customer_state_ajax">State: </label>
    <select name="customer_state_ajax" id="customer_state_ajax">
        <option value="0">Select a State</option>
        {{#each states}}
        <option value="{{this.state_id}}">{{this.state_name}}</option>
        {{/each}}
    </select>

    <input type="submit">
</form>

{{!-- Embed our javascript to handle the DOM manipulation and AJAX request --}}
<script type="application/javascript" src="./js/add_customer.js"></script>


