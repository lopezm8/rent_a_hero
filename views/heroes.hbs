{{!-- Form to add a record to the table --}}
<h2>Add a Hero</h2>
<p>To add a new hero, please enter their information below and click 'Submit'!</p>
<form id="add-hero-form-ajax">
    <label for="hero_name_ajax">Hero Name: </label>
    <input type="text" name="hero_name_ajax" id="hero_name_ajax">

    <label for="hero_state_ajax">State: </label>
    <select name="hero_state_ajax" id="hero_state_ajax">
        <option value="0">Select a State</option>
        {{#each states}}
        <option value="{{this.state_id}}">{{this.state_name}}</option>
        {{/each}}
    </select>

    <label for="hero_superpower_ajax">Superpower: </label>
    <input type="text" name="hero_superpower_ajax" id="hero_superpower_ajax">

    <label for="hero_hourly_rate_ajax">Hourly Rate: </label>
    <input type="text" name="hero_hourly_rate_ajax" id="hero_hourly_rate_ajax">

    <input type="submit">
</form>

{{!-- Embed our javascript to handle the DOM manipulation and AJAX request --}}
<script type="application/javascript" src="./js/add_hero.js"></script>

{{!-- Form to search for a Hero by name --}}
<h2>Search for a Hero</h2>
<p>To search for a hero, please enter the Hero name and click on "Submit".</p>
<form id="search-hero-html" method='GET' action='/heroes'>
    <label for="input-hero_name">Search by Hero Name: </label>
    <input type="text" name="hero_name" id="input-hero_name-html-search">

    <input type="submit">
    <a href='/'><button>Reset</button></a>
</form>


