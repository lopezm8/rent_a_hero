<!-- index.hbs -->
<h1>Heroes</h1>

{{!-- Create a table --}}
<table id="heroes-table">

    {{!-- Header section --}}
    <thead>

        {{!-- For just the first row, we print each key of the row object as a header cell so we
        know what each column means when the page renders --}}
        <tr>
            <th>ID</th>
            <th>Hero Name</th>
            <th>Superpower</th>
            <th>Hourly Rate</th>
            <th>State</th>
            <th>Delete</th>
        </tr>
    </thead>

    {{!-- Body section --}}
    <tbody>

        {{!-- For each row, print the id, fname, lname, homeworld and age, in order --}}
        {{#each data}}
        <tr>
            <td>{{this.hero_id}}</td>
            <td>{{this.hero_name}}</td>
            <td>{{this.hero_superpower}}</td>
            <td>{{this.hero_hourly_rate}}</td>
            <td>{{this.hero_state_id}}</td>
            <td><button onclick="deleteHero({{this.hero_id}})">Delete</button></td>
        </tr>
        {{/each}}
    </tbody>
</table>
<script type="application/javascript" src="./js/delete_hero.js"></script>

